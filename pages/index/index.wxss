/**index.wxss**/

/**HEADER**/

.header {
  background-color: white;
  height: 45px;
  width: 100%;
  margin: 0px 0px 2px 0px;
  box-shadow: 0px 3px 15px #DCD7D9;
  position: fixed;
  top:0;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}


.header .header-menu {
  color: rgb(158, 154, 154);
  font-size: 14px;
}

/**CONTAINER**/

.container {
  margin-left: 0.5em;
  margin-right: 0.5em;
}

.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 20px;
}

.card-product {
  border-radius: 3%;
  box-shadow: 3px 3px 2px 2px #edf2f4;
  width: 100%;
  display: inline-block;
  margin: 0 0 10px;
  overflow: hidden;
  color: black;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;
}

.productCardImage {
  width: 100%;
}

.card-product .h2 {
  font-size: 14px;
  margin-bottom: 10px;
}

.card-product .h3 {
  font-size: 11px;
  margin-bottom: 10px;
}

